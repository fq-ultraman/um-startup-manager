{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UM启动项管理",
  "version": "0.1.2",
  "identifier": "com.fq-ultraman.UMStartupManager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "UM Startup Manager",
        "width": 800,
        "height": 600,
        "decorations": false,
        "center": true,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "shortDescription": "UM Startup Manager",
    "longDescription": "UM Startup Manager是一个现代化的启动项管理工具，用于管理Windows系统的启动程序。",
    "copyright": "Copyright (c) 2025 fq-ultraman",
    "publisher": "fq-ultraman",
    "targets": "all",
    "icon": [
      "icons/128x128@2x.png",
      "icons/128x128.png",
      "icons/64x64.png",
      "icons/32x32.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
